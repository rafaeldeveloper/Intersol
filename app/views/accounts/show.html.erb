<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Agencia:</strong></dt>
  <dd><%= @account.agency_id %></dd>
  <dt><strong>Conta</strong></dt>
  <dd><%= @account.conta %></dd>
  <dt>Limite:</strong></dt>
  <dd><%= @account.limite %></dd>
  <dt><strong>Saldo:</strong></dt>
  <dd><%= @account.balance %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
